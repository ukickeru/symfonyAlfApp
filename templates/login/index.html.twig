{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-lg-auto col-md-auto col-sm-auto text-center">
            <!-- Login form -->
            <form class="text-center border border-light p-5 hoverable" id="loginForm" action="">

                <h2 class="mb-5">Альфа-Риэлт</h2>

                <!-- Debug message -->
                <h2 class="mb-5">{{ message }}</h2>

                <!-- Name -->
                <select type="name" class="browser-default custom-select form-control mb-4" id="LoginFormName">
                    <option>Выберите логин</option>
                    {% for role in db_roles %}
                    <option>{{ role }}</option>
                    {% endfor %}
                </select>

                <!-- Password -->
                <input type="password" id="LoginFormPassword" class="form-control" placeholder="Пин-код" style="display: none;">

                <div class="d-flex">
                    <!-- Sign in button -->
                    <button class="btn btn-info btn-block my-4 mx-0" id="formSubmit" type="submit">Получить пин</button>
                    <!-- Cancel button -->
                    <button class="btn btn-danger btn-block my-4 ml-1 mr-0 px-0" id="changeLogin" type="button" title="Сменить логин" style="display: none;">&times;</button>
                </div>

                <!-- Issues -->
                <a class="ml-1" id="noAccess" href="#">Нет доступа?</a>

            </form>
            <!-- Login form -->
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="asset/js/templates/login/login.js"></script>
{% endblock %}
